<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window  xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.xformix.comicbook.forms.frm_location.Frm_locationEdit"
        datasource="tbllocationDs"
        focusComponent="fieldGroup"
        messagesPack="com.xformix.comicbook.forms.frm_location">
    <dialogMode height="600"
                width="800"/>
<layout spacing="true" >
  
      <groupTable id="Detail"  width="100%" height="100%" x="0" y="0" >
          <rows datasource="tbllocationDs"/>
          <actions>
              <action id="create"/>
              <action id="edit"/>
              <action id="remove"/>
          </actions>
          <columns>
              <column id="location" caption="Location" property="location"/>
              <column id="sort_order" caption="Sort Order" property="sort_order"/>
          </columns>
      </groupTable>

</layout>
</window>
